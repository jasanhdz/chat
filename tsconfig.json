{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["server/*"],
      "@/config": ["server/config/index"],
      "@/routes": ["server/routes/index"],
      "app/*": ["client/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./server/types"
    ]
  },
  "include": ["server/**/*", "client/**/*"],
  "exclude": ["node_modules"]
}
